<div class="col-md-6 offset-md-3 mt-3" >

<%= form_with url: sign_in_path do |form| %>
<h1>Sign In</h1>
 <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
            <% @user.errors.full_messages.each do | message | %>
                <div>
                    <%= message %>
                </div>
            <% end %>
        </div>
    <% end %>
 <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@mail.com"  %>
    </div>
    
    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password"    %>
    </div>

      <div class="mb-3">
        <%= form.submit "Sign Up", class: "btn btn-primary", style: "border-radius:0;" %>
    </div>
</div>