<div class="col-md-6 offset-md-3 mt-3" >

<%= form_with url: sign_in_path, data: { turbo: false } do |form| %>
<h1>Sign In</h1>
 <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@mail.com"  %>
    </div>
    
    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password"    %>
    <%=  link_to "Forgot your password?", password_reset_path %> 
    </div>

      <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary", style: "border-radius:0;" %>
    </div>
    <% end %>
</div>